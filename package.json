{
  "name": "@open-maze/onboarding-library-openmaze",
  "private": false,
  "version": "1.0.1",
  "description": "Onboarding library for OpenMaze",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/onboarding-library-openmaze.js",
      "types": "./dist/onboarding-library-openmaze.d.ts",
      "require": "./dist/onboarding-library-openmaze.umd.cjs"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "main": "./dist/onboarding-library-openmaze.umd.js",
  "module": "./dist/onboarding-library-openmaze.js",
  "types": "./dist/onboarding-library-openmaze.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Open-Maze/Onboarding-Library.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build-pack": "npm run build && npm pack",
    "test": "npm run build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "prettier": "prettier --write .",
    "prettier-debug": "prettier --debug-check .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky install"
  },
  "dependencies": {
    "autoprefixer": "^10.4.19",
    "material-symbols": "^0.17.3",
    "postcss": "^8.4.38",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.3",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.3.0",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@semantic-release/npm": "^12.0.0",
    "@storybook/addon-essentials": "^8.0.5",
    "@storybook/addon-interactions": "^8.0.5",
    "@storybook/addon-links": "^8.0.5",
    "@storybook/addon-onboarding": "^8.0.5",
    "@storybook/blocks": "^8.0.5",
    "@storybook/react": "^8.0.5",
    "@storybook/react-vite": "^8.0.5",
    "@storybook/test": "^8.0.5",
    "@types/node": "^20.12.4",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-storybook": "^0.8.0",
    "husky": "^9.0.11",
    "prettier": "3.2.5",
    "storybook": "^8.0.5",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.8.1"
  }
}
